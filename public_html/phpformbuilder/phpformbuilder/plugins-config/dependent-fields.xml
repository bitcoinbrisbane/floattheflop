<?xml version="1.0" encoding="UTF-8"?>
<root>
    <default>
        <includes>
            <!--
                Path to css and js files into plugins folder.
                If your files are not in plugins folder, use absolute paths.
            -->
            <css>
                <file>dependent-fields/dependent-fields.min.css</file>
            </css>
            <js>
                <file>dependent-fields/jquery.dependent-fields.min.js</file>
            </js>
        </includes>
        <js_code>
<![CDATA[   $("%selector%").dependentFields();
    $("%selector%").trigger('change ifChanged changed.bs.select');
    $('body').addClass('dependent-fields-loaded');]]>
        </js_code>
    </default>
    <custom>
        <!--
            If you need differents includes for your custom code,
            copy the default '<includes>' structure and put the needed files into '<file>' nodes.
            You can add several files nodes if necessary.
        -->
        <js_code>
            <!-- your custom code here -->
        </js_code>
    </custom>
</root>
